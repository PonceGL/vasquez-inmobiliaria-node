  <body>
    <%- include('partials/header.ejs') %>
    <main>
      <section class="cover">
        <div class="soccial-container">
          <div class="top-line line"></div>
          <div class="soccial-icons-container">
            <a href="#"></a>
            <a href="#"></a>
